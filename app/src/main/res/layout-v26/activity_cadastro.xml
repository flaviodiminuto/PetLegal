<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/endblue"
    tools:context="com.flavio.android.petlegal.view.Inicio">


    <TextView
        android:id="@+id/lblCadastroUsuario"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/bem_vindo_ao_pet_legal"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/cadastro_cpf"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:autofillHints="CPF"
        android:background="@drawable/retanguloarredondado"
        android:ems="10"
        android:hint="@string/digite_seu_cpf_aqui"
        android:inputType="number"
        android:maxLength="14"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblCadastroUsuario"
        app:layout_constraintVertical_bias="0.02"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/cadastro_password"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:autofillHints="Senha"
        android:background="@drawable/retanguloarredondado"
        android:ems="10"
        android:hint="@string/digite_sua_senha"
        android:inputType="textPassword"
        android:maxLength="25"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadastro_cpf"
        app:layout_constraintVertical_bias="0.045"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/cadastro_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:autofillHints="Confirma senha"
        android:background="@drawable/retanguloarredondado"
        android:ems="10"
        android:hint="@string/confirme_a_senha"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLength="25"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadastro_password"
        app:layout_constraintVertical_bias="0.071"
        tools:targetApi="o" />

    <Button
        android:id="@+id/cadastro_botao_registrar"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:background="#FF9800"
        android:text="@string/registrar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/cadastro_botao_cancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadastro_password_confirm" />

    <Button
        android:id="@+id/cadastro_botao_cancelar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:background="#673AB7"
        android:text="@string/cancelar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
