<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:context="com.flavio.android.petlegal.view.AtualizaPerfil">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgFotoAtualizaPerfil"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/petum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblAtualizaPerfilDeletaUsuario"
        android:layout_width="111dp"
        android:layout_height="29dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="196dp"
        android:text="Deletar Usuario"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblAtualizarFotoAtualizaPerfil"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Atualizar Foto"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/imgFotoUserPerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/btnDeletaAtualizaPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lblAtualizarFotoAtualizaPerfil"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/lblAtualizaPerfilNomeCompleto"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Nome Completo"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgFotoAtualizaPerfil" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="270dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/lineaar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="324dp">

            <EditText
                android:id="@+id/txtAtualizaPerfilEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                android:text="Email" />

            <EditText
                android:id="@+id/txtAtualizaPerfilLogradouro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Endereço"
                android:inputType="textPersonName"
                android:text="Logradouro" />

            <EditText
                android:id="@+id/txtAtualizaPerfilNumeroCasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Número da casa"
                android:inputType="number"
                android:text="0" />

            <EditText
                android:id="@+id/txtAtualizaPerfilComplemento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Complemento"
                android:inputType="textPersonName"
                android:text="Complemento" />


            <EditText
                android:id="@+id/txtAtualizaPerfilBairro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Bairro"
                android:inputType="textPersonName"
                android:text="Bairro" />

            <EditText
                android:id="@+id/txtAtualizaPerfilCep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="CEP"
                android:inputType="number"
                android:text="CEP" />


            <TextView
                android:id="@+id/lblAtualizaPerfilNovoTelefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adicionar Telefone " />

            <EditText
                android:id="@+id/txtAtualizaPerfilSenhaAtual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Senha Atual"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtAtualizaPerfilNovaSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nova Senha"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/txtAtualizaPerfilConfirmaNovaSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Confirma Senha"
                android:inputType="textPassword" />

            <ImageButton
                android:id="@+id/btnAtualizaPerfilTrocarSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70dp"
                android:layout_marginStart="70dp"
                app:srcCompat="@android:drawable/stat_notify_sync_noanim" />

            <EditText
                android:id="@+id/txtAtualizaPerfilAdicionaTelefon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Número de Telefone"
                android:inputType="number" />


            <RadioGroup
                android:id="@+id/RadioGrupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButtonTelFixo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Telefone Fixo" />

                <RadioButton
                    android:id="@+id/radioButtonTelMovel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Telefone Móvel" />
            </RadioGroup>

            <ImageButton
                android:id="@+id/btnAtualizaPerfilAdicionarNovoNumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70dp"
                android:layout_marginStart="70dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_input_add" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="@+id/listaUserPerfilTelefones"
                tools:layout_editor_absoluteY="716dp" />


        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="196dp"
        android:text="Aplicar alterações"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lblAtualizarFotoAtualizaPerfil" />

    <ImageButton
        android:id="@+id/btnAtualizaPerfilAplicaAtualizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_set_as" />


</android.support.constraint.ConstraintLayout>
